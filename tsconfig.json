{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "lib": ["es2020", "webworker"],
    "types": ["@cloudflare/workers-types"],
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
  },
  "include": [
    "@types",
    "src"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
